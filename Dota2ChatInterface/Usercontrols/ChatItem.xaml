<UserControl x:Class="Dota2ChatInterface.ChatItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">
    <Grid Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="_Scope" Content="[Scope]" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="22" Foreground="#FF8D8D8D" Grid.ColumnSpan="1" Padding="5,0"/>
        <Label x:Name="_Sender" Content="[Sender]" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="22" Foreground="White" Grid.Column="1" Padding="5,0"/>
        <TextBlock x:Name="_Message" Margin="0,0,10,0" VerticalAlignment="Top" FontSize="22" Foreground="White" HorizontalAlignment="Left" Text="[Message Content]" Padding="5,0" TextWrapping="Wrap" Grid.Column="2"/>

    </Grid>
</UserControl>
